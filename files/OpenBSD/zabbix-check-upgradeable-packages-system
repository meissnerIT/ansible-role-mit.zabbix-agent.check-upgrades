#!/bin/sh
#
# Managed by ansible (mit.zabbix-agent.check-upgrades)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

VALUE=$(/usr/local/bin/sudo /usr/sbin/syspatch -c|awk '{$1=$1;print}'|tr "\n" ,|sed 's/,$//')

# -v: verbose
if [ "$1" = "-v" ]; then
    echo "Transmitting system.sw.upgradeable-packages.system='$VALUE'"
    zabbix_sender -c /etc/zabbix/zabbix_agentd.conf -k "system.sw.upgradeable-packages.system" -o "$VALUE"
else
    zabbix_sender -c /etc/zabbix/zabbix_agentd.conf -k "system.sw.upgradeable-packages.system" -o "$VALUE" 1>/dev/null
fi
