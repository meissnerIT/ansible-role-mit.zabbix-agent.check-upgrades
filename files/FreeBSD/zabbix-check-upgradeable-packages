#!/bin/sh
#
# Managed by ansible (mit.zabbix-agent.check-upgrades)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

VALUE=$(pkg upgrade --dry-run|egrep "^\s"|awk '{$1=$1;print}'|tr "\n" ,|sed 's/,$//')

# -v: verbose
if [ "$1" == "-v" ]; then
    echo "Transmitting system.sw.upgradeable-packages.pkgs='$VALUE'"
    zabbix_sender -c /usr/local/etc/zabbix64/zabbix_agentd.conf -k "system.sw.upgradeable-packages.pkgs" -o "$VALUE"
else
    zabbix_sender -c /usr/local/etc/zabbix64/zabbix_agentd.conf -k "system.sw.upgradeable-packages.pkgs" -o "$VALUE" 1>/dev/null
fi

