#!/bin/sh
#
# Managed by ansible (mit.zabbix-agent.check-upgrades)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN
#
# 2024-02-09: Beautified output
# 2024-11-06: Added parameter -v (verbose)
# 2024-11-07: Excludes jails

# Second column of output is the jail id
VALUE=$(sudo /usr/local/bin/checkrestart -H | awk '($2 == 0) { print $4; }' | sort -u | tr "\n" "," | sed 's/,$//')

# -v: verbose
if [ "$1" = "-v" ]; then
    echo "Transmitting system.sw.needrestart.service='$VALUE'"
    zabbix_sender -c /usr/local/etc/zabbix/zabbix_agentd.conf -k "system.sw.needrestart.service" -o "$VALUE"
else
    zabbix_sender -c /usr/local/etc/zabbix/zabbix_agentd.conf -k "system.sw.needrestart.service" -o "$VALUE" 1>/dev/null
fi
