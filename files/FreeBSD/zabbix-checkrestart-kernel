#!/bin/sh
#
# Managed by ansible (mit.zabbix-agent.check-upgrades)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

VALUE=$(/opt/bin/needrestart | awk ' /NEEDRESTART-KSTA:/ { print $2; }')

# -v: verbose
if [ "$1" = "-v" ]; then
    echo "Transmitting system.sw.needrestart.kernel='$VALUE'"
    zabbix_sender -c /usr/local/etc/zabbix/zabbix_agentd.conf -k "system.sw.needrestart.kernel" -o "$VALUE"
else
    zabbix_sender -c /usr/local/etc/zabbix/zabbix_agentd.conf -k "system.sw.needrestart.kernel" -o "$VALUE" 1>/dev/null
fi
